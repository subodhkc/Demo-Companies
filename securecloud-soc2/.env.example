# SecureCloud Platform - Environment Configuration
# SOC 2 Control: CC6.7 (Data Protection)
# 
# IMPORTANT: Never commit actual secrets to version control
# Copy this file to .env and fill in actual values

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# Database - SOC 2 Control: CC6.7
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=securecloud
DB_USER=securecloud_admin
DB_PASSWORD=<your-secure-password>
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# Redis - SOC 2 Control: CC6.1
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<your-secure-password>
REDIS_TLS=true

# =============================================================================
# JWT - SOC 2 Control: CC6.1
# =============================================================================
JWT_SECRET=<your-256-bit-secret>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=securecloud
JWT_AUDIENCE=securecloud-api

# =============================================================================
# Encryption - SOC 2 Control: CC6.7
# =============================================================================
ENCRYPTION_ALGORITHM=aes-256-gcm
KMS_KEY_ID=alias/securecloud-data-key
AWS_REGION=us-east-1

# =============================================================================
# CORS - SOC 2 Control: CC6.6
# =============================================================================
CORS_ORIGINS=https://app.securecloud.io,https://admin.securecloud.io

# =============================================================================
# Logging - SOC 2 Control: CC7.2
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# Rate Limiting - SOC 2 Control: A1.1
# =============================================================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# =============================================================================
# Session - SOC 2 Control: CC6.1
# =============================================================================
SESSION_TIMEOUT=900
SESSION_MAX_CONCURRENT=5

# =============================================================================
# MFA - SOC 2 Control: CC6.1
# =============================================================================
MFA_ISSUER=SecureCloud
MFA_WINDOW=1

# =============================================================================
# External Services
# =============================================================================
OKTA_DOMAIN=securecloud.okta.com
OKTA_CLIENT_ID=<your-client-id>
OKTA_CLIENT_SECRET=<your-client-secret>

SPLUNK_HEC_URL=https://splunk.securecloud.io:8088
SPLUNK_HEC_TOKEN=<your-hec-token>

DATADOG_API_KEY=<your-api-key>
DATADOG_APP_KEY=<your-app-key>
