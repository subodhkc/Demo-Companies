# Application
APP_NAME=TechCorp AI
APP_ENV=production
DEBUG=false

# Security - ISO 27001: A.9.4.3
JWT_SECRET_KEY=your-secret-key-here-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
REFRESH_TOKEN_EXPIRATION_DAYS=7

# Encryption - ISO 27001: A.10.1.1
ENCRYPTION_KEY=your-encryption-key-here-32-bytes
ENCRYPTION_ALGORITHM=AES-256-GCM

# Database - SOC 2: CC6.1
DATABASE_URL=postgresql://user:password@localhost:5432/techcorp
DATABASE_SSL_MODE=require
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis - Session Management
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_SSL=true

# MFA - ISO 27001: A.9.4.2
MFA_ISSUER=TechCorp AI
MFA_REQUIRED=true

# Rate Limiting - SOC 2: CC6.6
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Audit Logging - ISO 27001: A.12.4.1
LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_ENCRYPTION=true

# CORS - Security
ALLOWED_ORIGINS=https://techcorp.ai,https://app.techcorp.ai
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=*

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
BREACH_NOTIFICATION_EMAIL=security@techcorp.ai
